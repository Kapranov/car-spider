  "repository": {
    "type": "git",
    "url": "git@github.com:beeman/crspdr-api.git"
  },
  "scripts": {
    "pretest": "jshint .",
    "start": "node server/server.js",
    "dev": "nodemon server/server.js --watch server --watch common --ext js,json",
