  "main": "server/server.js",
  "dependencies": {
    "bluebird": "2.9.34",
    "cheerio": "0.19.0",
    "compression": "1.5.2",
    "cors": "2.7.1",
    "cron": "1.0.9",
    "errorhandler": "1.4.2",
    "express-ping": "git+https://github.com/beeman/express-ping.git#master",
    "loopback": "2.20.0",
    "loopback-boot": "2.9.0",
    "loopback-datasource-juggler": "2.36.0",
    "loopback-ds-paginate-mixin": "git+https://github.com/fullcube/loopback-ds-paginate-mixin.git#45b4b702881f6f1b19d5ab5c8b88ea415cf2591c",
    "nodemon": "^1.4.0",
    "request": "2.60.0",
    "serve-favicon": "2.3.0",
    "slug": "0.9.1"
  },
  "optionalDependencies": {
    "loopback-explorer": "1.8.0"
  },
  "devDependencies": {
    "jshint": "2.8.0"
